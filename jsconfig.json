{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false
  },
  "include": ["src", "vite.config.js", "tailwind.config.js"],
  "exclude": ["node_modules", "dist"]
}